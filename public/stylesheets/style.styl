@import "reset"
@import "variables"

// globals
html
  font-family: $font_family
  a
    color: $link_color

// utility classes
span.button
  display: block
  overflow: hidden
  margin: 0 0 7px 0
  border: $border
  color: $text_color
  background-color: $pale_gray 
  border-radius: 3px
  $pale_gradient()
  font-weight: bold
  text-align: center
  text-decoration: none
  vertical-align: middle
  line-height: 32px
  height: 32px
  cursor: pointer

  &:hover
    cursor: pointer
